---
/* NEU: Styles sauber importieren */
import '../styles/tokens.css';
import '../styles/global.css';
import '../styles/base.css';

/* NEU: UI-Assets importieren ‚Äì sorgt f√ºr korrekte, gehashte URLs */
import bg from '../assets/bg.webp';
import favicon from '../assets/favicon.webp';
import logoHeader from '../assets/logo-header.webp';
import logoFull from '../assets/logo-full.webp';

const {
  title = "üêæ Faelis' Paw Artistry ",
  description = "Furry Art & Commissions"
} = Astro.props;
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Favicon (aus src/assets) -->
    <link rel="icon" type="image/webp" href={favicon.src} />
    <meta name="theme-color" content="#0b0b0f" />

    <!-- Fuzzy Bubbles -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fuzzy+Bubbles:wght@400;700&display=swap" rel="stylesheet">

    <!-- Optional: Preload f√ºrs Header-Logo -->
    <link rel="preload" as="image" href={logoHeader.src} />
  </head>

  <!-- NEU: Bildpfade als CSS-Variablen setzen -->
  <body style={`--bg-image: url(${bg.src}); --header-logo: url(${logoHeader.src}); --home-hero: url(${logoFull.src});`}>
    <!-- ... dein bestehendes Header/Nav-Markup bleibt ... -->

    <div class="container">
      <main class="panel">
        <slot />
      </main>
      <footer class="footer">
        ¬© {new Date().getFullYear()} Faelis.Art ‚Äî Site made with ‚ô• by Lucy Foxx
      </footer>
    </div>

    <script src="/js/nav.js" defer></script>
  </body>
</html>
