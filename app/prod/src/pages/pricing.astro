---
import { getEntry } from 'astro:content';
import Layout from '../components/Layout.astro';
import PriceTable from '../components/PriceTable.astro';

const title = 'Preise & Aufträge';
const prices = (await getEntry('tables', 'prices')).data; // lädt src/content/tables/prices.json
---
<Layout {title}>
  <h1>{title}</h1>
  <p>Hier findest du meine aktuellen Paketpreise.</p>
  <PriceTable {prices} />
</Layout>
