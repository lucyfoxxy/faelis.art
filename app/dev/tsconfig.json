{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",   // oder "NodeNext", beides geht mit Astro 4+
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@data/*": ["src/data/*"],
      "@content/*": ["src/content/*"],
      "@assets/*": ["src/assets/*"],
      "@scripts/*": ["src/scripts/*"]
    },
    "types": ["astro/client"]
  }
}
