---
import Layout from '@components/Layout.astro';
import GalleryPage from '@components/GalleryPage.astro';
import manifest from '@content/galleries/manifest.json';

export function getStaticPaths() {
  return manifest.galleries.map(({ slug, title }) => ({
    params: { slug },
    props:  { title },
  }));
}

const { slug }  = Astro.params;
const { title } = Astro.props;
---
<Layout title={title}>
  <GalleryPage albumSlug={slug} title={title}/>
</Layout>
