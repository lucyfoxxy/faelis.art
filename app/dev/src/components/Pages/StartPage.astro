---
import Icon from '@Design/Icons.astro';
import { ASSETS } from '@Design/Assets.astro';
import type { Props as IconProps } from '@Design/Icons.astro';
type IconKind = IconProps['kind'];
const links: { href: string; label: string; kind: IconKind }[] = [ 
  { href: 'https://t.me/faelispawartistry',          label: 'Telegram',    kind: 'telegram'   },
  { href: 'mailto:info@faelis.art',                  label: 'Email',       kind: 'mail'       },
  { href: 'https://www.facebook.com/FaelisPawArtistry', label: 'Facebook', kind: 'facebook'   },
  { href: 'https://www.instagram.com/faeliskitty',   label: 'Instagram',   kind: 'instagram'  },
  { href: 'https://www.furaffinity.net/user/faelis', label: 'FurAffinity', kind: 'furaffinity'}
] as const;
const slug = 'bestof';
const autoplay = true;
const interval = 5000;   // 5s
const random   = true;
const isExternalLink = (href: string) => href.startsWith('http');
export const title = 'Home - Faelis Paw Artistry'
---
<section class="intro">
  <section class="intro__hero section">
    <img class="intro__mascot" src={ASSETS.mascot.src}  alt="" />
    <img class="intro__wordmark" src={ASSETS.logo.src} alt="Faelis Paw Artistry" />
  </section>

  <section class="content-layout content-layout--split section">
    <section class="content-card">
      <h1>Welcome,</h1>
      <div class="prose">
        <p>My name is Faelis Skribblekitty, passionate artistic kitten since 2003.</p>
        <p>Whether you need some logo for your website,
          a ref-sheet / badge for your fursona or something completely different <em>(maybe...something kinky? :P)</em>
           â€” you found the right artistic kitten for all sorts of creative tasks! </p>
        <p><i>Take a look to my <a href="/galleries">Art Gallery</a></i> to get an idea of my personal art style.</p>
      </div>
      <h3><i>Faelis Skribblekitty ðŸ’œ</i></h3>
    </section>

    <section class="content-card">
      <h2>Preview:</h2>
      <p><i>Here's a small preview for you:</i></p>
      
      <div class="prose">
        
      <section class="gallery"  data-slug={slug}  data-autoplay={String(autoplay)}  data-interval={String(interval)}  data-random={String(random)}>
        <div class="gallery-viewer">
          <div class="gallery-viewer-frame compact">
            <img class="gallery-viewer-image compact" alt="Best of artworks" loading="lazy" />
          </div>
          <div class="gallery-viewer-progress compact"></div>
        </div>
      </section>
      </div>      
    </section>
  </section>
  
  <section class="content-card section">
    <h2>Contact:</h2>
    <div class="contact-grid">
      {links.map((l) => {
        const external = isExternalLink(l.href);
        return (
          <a
            class={`contact-btn contact-btn--${l.kind}`}
            href={l.href}
            rel={external ? 'me noopener noreferrer' : 'me'}
            target={external ? '_blank' : undefined}
          >
            <span class="contact-ico"><Icon kind={l.kind} /></span>
            <span>{l.label}</span>
          </a>
        );
      })}
    </div>
  </section>
</section>
<script>
  import initGalleryIntro from "@Scripts/GalleryIntro.js";
  const boot = () => initGalleryIntro();

  if (document.readyState === "complete" || document.readyState === "interactive") {
    requestAnimationFrame(boot);
  } else {
    document.addEventListener("DOMContentLoaded", boot, { once: true });
    document.addEventListener("astro:page-load", boot, { once: true });
  }
</script>
