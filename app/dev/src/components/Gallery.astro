---
type Props = { albumSlug: string; title?: string }
const { albumSlug, title = 'Galerie' } = Astro.props as Props;
---
<section
  class="fae-gallery"
  data-slug={albumSlug}
  data-autoplay="true"     
  data-interval="5000"     
  data-random="true"       
>
  <h1>{title}</h1>

  <div class="fae-viewer">
    <button class="nav prev" aria-label="Vorheriges Bild">❮</button>
    <button class="playpause" aria-label="Play/Pause">⏸</button>
    <button class="nav next" aria-label="Nächstes Bild">❯</button>
    <div class="frame">
      <img class="image" alt="" />
    </div>
    
    
    <div class="progress"></div>
  </div>

  <div class="fae-thumbs" role="list"></div>
</section>

<script src="/js/gallery-page.js" defer></script>
